---
import Main from "../layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
import type { TimelineEntry } from "../utils/content";

const timeline: TimelineEntry[] = [
  { year: 2025, title: "Kindai University — Current", description: "Faculty of Science and Engineering, Department of Information Science. Researching Computer Vision and Deep Learning (RT-DETR, YOLO)." },
  { year: 2024, title: "Kindai University — Enrolled", description: "Started undergraduate studies in Information Science." },
  { year: 2021, title: "High School — Graduated", description: "Graduated from high school. Developed an early interest in programming and mathematics." },
  { year: 2018, title: "High School — Enrolled", description: "Began high school education." },
  { year: 2015, title: "Middle School — Graduated", description: "Completed middle school education." },
];
---

<Main title="Timeline">
  <div class="mx-3 lg:mx-0">
    <div
      class="onload-animation mb-6 flex flex-row items-center space-x-3"
      style="animation-delay: calc(var(--onload-animation-delay) + 1 * var(--onload-animation-interval));"
    >
      <Icon name="heroicons:clock" size={28} class="text-[var(--primary-color)]" />
      <h1 class="text-3xl font-bold text-[var(--text-color)]" style="font-family: var(--primary-font);">
        Timeline
      </h1>
    </div>

    <div class="relative ml-4 border-l-2 border-[var(--primary-color)] pl-8">
      {
        timeline.map((entry, index) => (
          <div
            class="onload-animation relative mb-10 last:mb-0"
            style={`animation-delay: calc(var(--onload-animation-delay) + ${index + 2} * var(--onload-animation-interval));`}
          >
            {/* Dot on the timeline */}
            <div class="absolute -left-[2.6rem] top-1 flex h-5 w-5 items-center justify-center rounded-full border-2 border-[var(--primary-color)] bg-[var(--background-color)]">
              <div class="h-2 w-2 rounded-full bg-[var(--primary-color)]" />
            </div>

            {/* Year label */}
            <span class="mb-1 inline-block rounded-md bg-[var(--primary-color-lighten)] px-2.5 py-0.5 text-sm font-semibold text-[var(--primary-color)]">
              {entry.year}
            </span>

            {/* Content card */}
            <div class="mt-2 rounded-2xl bg-[var(--card-color)] p-5">
              <h3 class="mb-2 text-lg font-bold text-[var(--text-color)]" style="font-family: var(--primary-font);">
                {entry.title}
              </h3>
              <p class="leading-relaxed text-[var(--text-color-lighten)]" style="font-family: var(--primary-font);">
                {entry.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Main>
